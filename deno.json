{
  "name": "@D43M0N/ts_rust",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "compilerOptions": {
    "strict": true,
    "lib": [
      "deno.ns",
      "dom"
    ]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "tasks": {
    "dev": "deno run --watch src/main.ts",
    "test": "deno test src/test.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "lint": {
    "files": {
      "include": [
        "src/"
      ],
      "exclude": [
        "src/test.ts"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [],
      "exclude": []
    }
  },
  "fmt": {
    "files": {
      "include": [
        "src/"
      ],
      "exclude": []
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "test": {
    "files": {
      "include": [
        "src/test.ts"
      ],
      "exclude": []
    }
  }
}
